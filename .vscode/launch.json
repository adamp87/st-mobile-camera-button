{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
        "name": "Python: Current File",
        "type": "debugpy",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "env": {
          "DEBUG": "1",
        },
        "args": [],
        "justMyCode": true
    },
    {
      "name": "Debug Streamlit App Local",
      "type": "debugpy",
      "request": "launch",
      "module": "streamlit",
      "args": [
        "run",
        "example.py",
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
  ]
}
